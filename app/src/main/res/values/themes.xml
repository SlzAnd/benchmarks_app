<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Task3Benchmarks" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="errorTextColor">@color/red</item>
        <item name="android:statusBarColor">@color/web_orange</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="gridItemTextAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="enterDialogMessageTextAppearance">
        <item name="fontFamily">@font/poppins_400</item>
        <item name="lineHeight">21sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="enterDialogInputHintStyle">
        <item name="fontFamily">@font/poppins_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="CustomTextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="boxStrokeColor">@color/grey_10</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:fontFamily">@font/poppins_500</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textAlignment">center</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
    </style>

    <style name="CustomTextInputEditText.FilledBox" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:layout_width">315dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:paddingTop">27dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">27dp</item>
        <item name="android:fontFamily">@font/poppins_500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/poppins_500</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
        <item name="background">@color/red</item>
    </style>

    <style name="Theme.Task3Benchmarks" parent="Base.Theme.Task3Benchmarks" />
</resources>