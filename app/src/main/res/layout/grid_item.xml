<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="105dp"
    android:layout_height="105dp"
    app:cardBackgroundColor="@color/grey_10"
    app:cardCornerRadius="15dp">

    <TextView
        android:id="@+id/data_item_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAppearance="@style/gridItemTextAppearance" />

    <ProgressBar
        android:id="@+id/grid_item_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_10_opacity_70"
        android:indeterminateDrawable="@drawable/progress_bar_gradient"
        android:visibility="gone" />
</androidx.cardview.widget.CardView>